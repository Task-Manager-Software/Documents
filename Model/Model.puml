@startuml
title Relationships - Class Diagram

class Account {
    +Text FullName    
}

class Project {
    +Text Title
    +Bool ShowCompletedTasks
}

class Task {
    +Account AssignedTo
    +Text Title
    +Bool Done
    +Bool MyDay
    +Bool Important
    +DateTime? Reminder
    +Date? Duedate
    +RepeatType Repeat
    +Byte? SelectedWeekDay
    +Text Note
}

class Step {
    +Text Title
    +Bool Done
}

class File {
    +Text Filename
}

enum RepeatType{
    Daily
    Weekdays
    Weekly
    Monthly
    Yearly
}

Account "1" *-down- "many" Project
Project "1" *-down- "many" Task
Account "1" *-down- "1" Task
Task "1" *-down- "many" File
Task "1" *-down- "many" Step
Task -> RepeatType

@enduml